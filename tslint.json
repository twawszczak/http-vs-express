{
  "extends": [
    "tslint:recommended",
    "tslint-config-standard"
  ],
  "rules": {
    "no-console": [true, "log"],
    "object-curly-spacing": [ // aligning style with standard
      true,
      "always"
    ],
    "object-literal-sort-keys": false, // too problematic
    "ter-indent": [ // aligning style with standard
      true,
      2,
      {
        "SwitchCase": 1,
        "CallExpression": "first",
        "MemberExpression": 1
      }
    ],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration"
    ]
  }
}
